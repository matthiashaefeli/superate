<div class="text-center"> 
  <h2>Registrar</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
      <div class="field">
      <%= f.label :Nombre %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
      <div class="field">
      <%= f.label :Apellido %><br />
      <%= f.text_field :lastname, autofocus: true, autocomplete: "email" %>
    </div>
      <div class="field">
      <%= f.label :Grupo %><br />
      <%= f.text_field :group, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :Contraseña %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> dígitos)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :confirmación_de_contraseña %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrar" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div> 